@model Domain.DTO.QuizzDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Quizz</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarQuizz" asp-controller="Quizz">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Qual tema do Quizz?</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
             </div>
             <div class="form-group" hidden>
                    <label asp-for="DataInclusao" class="control-label"></label>
                    <input asp-for="DataInclusao" class="form-control" />
                    <span asp-validation-for="DataInclusao" class="text-danger"></span>
            </div>
             <div class="form-group" hidden>
                 <label asp-for="ProfessorId" class="control-label"></label>
                 <div class="col-sm-6">
                     <select asp-for="ProfessorId" class="form-control">
                         <option>@User.Identity</option>
                     </select>
                 </div>
             </div>
            <div class="form-group">
                <input type="submit" value="Criar Pergunta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
@section scripts{
   <partial name="_ValidationScriptsPartial" />
}