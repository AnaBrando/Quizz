@model Domain.DTO.PerguntaDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pergunta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PerguntaPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpcaoA" class="control-label"></label>
                <input asp-for="OpcaoA" class="form-control" />
                <span asp-validation-for="OpcaoA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpcaoB" class="control-label"></label>
                <input asp-for="OpcaoB" class="form-control" />
                <span asp-validation-for="OpcaoB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpcaoC" class="control-label"></label>
                <input asp-for="OpcaoC" class="form-control" />
                <span asp-validation-for="OpcaoC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpcaoD" class="control-label"></label>
                <input asp-for="OpcaoD" class="form-control" />
                <span asp-validation-for="OpcaoD" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Quizz_id" class="control-label"></label>
                <select asp-for="Quizz_id" class="form-control">
                    <option>@Model.Quizz_id</option>
                </select>
                <span asp-validation-for="Quizz_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Resposta</label>
                <select asp-for="Resposta_id" class="form-control">
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                </select>
                <span asp-validation-for="Resposta_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nivel de Dificuldade</label>
                <select asp-for="Nivel_ID">
                    @foreach (var item in Model.niveis)
                    {
                        <option value="@item.Nivel_id">@item.Descricao</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

